<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Health+" class="action-bar" />
    </Page.actionBar>

    <ScrollView>
        <StackLayout class="home-container">
            <!-- Header Section -->
            <StackLayout class="header-section">
                <Label text="ðŸ‘‹ Welcome to Health+" class="header-title" textWrap="true" />
                <Label text="Your personal health companion" class="header-subtitle" textWrap="true" />
            </StackLayout>

            <!-- Feature Cards -->
            <GridLayout class="features-grid" rows="auto, auto" columns="*, *">
                
                <!-- Doctor Booking Card -->
                <StackLayout row="0" col="0" class="feature-card" tap="onDoctorBookingTap" touch="onCardTouch">
                    <Label text="ðŸ¥" class="feature-icon" />
                    <Label text="Book Doctor" class="feature-title" textWrap="true" />
                    <Label text="Schedule appointments" class="feature-description" textWrap="true" />
                </StackLayout>

                <!-- Step Counter Card -->
                <StackLayout row="0" col="1" class="feature-card" tap="onStepCounterTap" touch="onCardTouch">
                    <Label text="ðŸ‘Ÿ" class="feature-icon" />
                    <Label text="Step Tracker" class="feature-title" textWrap="true" />
                    <Label text="Track daily steps" class="feature-description" textWrap="true" />
                </StackLayout>

                <!-- AI Chat Card -->
                <StackLayout row="1" col="0" colSpan="2" class="feature-card feature-card-wide" tap="onAIChatTap" touch="onCardTouch">
                    <Label text="ðŸ¤–" class="feature-icon" />
                    <Label text="AI Health Assistant" class="feature-title" textWrap="true" />
                    <Label text="Get health advice powered by AI" class="feature-description" textWrap="true" />
                </StackLayout>
            </GridLayout>

            <!-- Quick Stats Section -->
            <StackLayout class="stats-section">
                <Label text="Quick Stats" class="section-title" />
                <GridLayout columns="*, *, *" class="stats-grid">
                    <StackLayout col="0" class="stat-item">
                        <!-- <Label text="{{ todaySteps }}" class="stat-value" /> -->
                        <Label text="ðŸ‘Ÿ" class="feature-icon" />
                        <Label text="Steps Today" class="stat-label" textWrap="true" />
                    </StackLayout>
                    <StackLayout col="1" class="stat-item">
                        <!-- <Label text="{{ upcomingAppointments }}" class="stat-value" /> -->
                        <Label text="ðŸ¥" class="feature-icon" />
                        <Label text="Appointments" class="stat-label" textWrap="true" />
                    </StackLayout>
                    <StackLayout col="2" class="stat-item">
                        <!-- <Label text="{{ chatMessages }}" class="stat-value" /> -->
                      <Label text="ðŸ¤–" class="feature-icon" />
                      <Label text="AI Chats" class="stat-label" textWrap="true" />
                    </StackLayout>
                </GridLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>